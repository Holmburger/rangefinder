<UserControl x:Class="LrDemo.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LrDemo"
             mc:Ignorable="d" Height="200" Width="400">
    <Viewbox Margin="0">
        <Grid HorizontalAlignment="Center" Height="50" Margin="0" VerticalAlignment="Center" Width="200">
            <Rectangle x:Name="Back" Fill="#FFA0A0A0" HorizontalAlignment="Center" Height="46" Margin="0" VerticalAlignment="Center" Width="120" RadiusY="23.5" RadiusX="23.5" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" Fill="White" HorizontalAlignment="Center" Height="42" VerticalAlignment="Center" Width="42" MouseLeftButtonDown="Dot_MouseLeftButtonDown" Margin="0"/>
        </Grid>
    </Viewbox>
</UserControl>
