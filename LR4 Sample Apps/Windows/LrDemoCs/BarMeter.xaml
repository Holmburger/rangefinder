<UserControl x:Class="LrDemo.BarMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LrDemo"
             mc:Ignorable="d" d:DesignWidth="800" Height="80">
    <Viewbox Margin="0">
        <Grid>
            <Rectangle x:Name="Box" Fill="#FF515151" HorizontalAlignment="Left" Height="50" Margin="0" Stroke="Black" VerticalAlignment="Center" Width="500"/>
            <Rectangle x:Name="Bar" Fill="#FFFF7F00" HorizontalAlignment="Left" Height="50" Margin="0" VerticalAlignment="Center" Width="300"/>

        </Grid>
    </Viewbox>
</UserControl>
