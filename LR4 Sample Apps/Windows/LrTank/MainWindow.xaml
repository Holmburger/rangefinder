                            <StackPanel Name="stackPanel10" Background="#FF35496A" Margin="2">
                                <TextBlock Height="16" HorizontalAlignment="Left" Margin="0,0,0,0" Name="textBlockAttachStatus" Text="Searching..." Width="171" />
